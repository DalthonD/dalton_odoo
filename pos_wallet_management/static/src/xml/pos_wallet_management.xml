<templates id="template" xml:space="preserve">

    <t t-extend='ClientListScreenWidget'>
        <t t-jquery='table.client-list tr' t-operation='append'>
            <th>Credits</th>
        </t>
    </t>

    <t t-extend='ClientLine'>
        <t t-jquery='tr.client-line' t-operation='append'>
            <td class="wallet_credits">
                <t t-if="partner.wallet_id">
                    <t t-esc='widget.format_currency(partner.wallet_credits)' />
                </t>
                <t t-if="!partner.wallet_id">N/A
                </t>
            </td>
        </t>
    </t>
    
    <t t-extend="ClientDetails">
        <t t-jquery=".edit-buttons" t-operation="before">
            <t t-if="partner.wallet_id">
                <div class='edit-buttons wallet' style="margin-right:55px">
                    <div class='button recharge_wallet'>
                        <img style="pointer-events: none;margin-left:100px" src="/pos_wallet_management/static/description/recharge_button.png" width="35px" height="35px" />
                    </div>
                </div>
            </t>
            <t t-if="!partner.wallet_id">
                <div class='edit-buttons wallet' style="margin-right:55px">
                    <div class='button create_wallet'>
                        <img style="pointer-events: none;margin-left:100px" src="/pos_wallet_management/static/description/recharge_button.png" width="35px" height="35px" />
                    </div>
                </div>
            </t>
        </t>
    </t>

    <t t-extend="PaymentScreen-Paymentmethods">
        <t t-jquery=".paymentmethods" t-operation="replace">
            <div class='paymentmethods'>
                <t t-foreach="widget.pos.cashregisters" t-as="cashregister">
                    <t t-if="widget.pos.config and widget.pos.config.show_wallet_type == 'payment_method'">
                        <div class="button paymentmethod" t-att-data-id="cashregister.journal_id[0]">
                            <t t-esc="cashregister.journal_id[1]" />
                        </div>
                    </t>
                    <t t-if="widget.pos.config and widget.pos.config.show_wallet_type == 'checkbox'">
                        <t t-if="cashregister.journal and !cashregister.journal.wallet_journal">
                            <div class="button paymentmethod" t-att-data-id="cashregister.journal_id[0]">
                                <t t-esc="cashregister.journal_id[1]" />
                            </div>
                        </t>
                    </t>
                </t>
            </div>
        </t>
    </t>

    <t t-extend='PaymentScreenWidget'>
        <t t-jquery='.paymentmethods-container' t-operation='after'>
            <div class= "wallet_text">
                <t t-if="widget.pos.config and widget.pos.config.show_wallet_type == 'checkbox'">
                    <div class="use_wallet">
                        <label class='switch'>
                            <input  id='use_wallet_payment' type='checkbox'/>
                            <span class='check_box round'></span>
                        </label>
                        <span style="position: absolute;margin: 13px;">Use Wallet Payment</span>
                    </div> 
                    </t> 
                <div class="wallet_balance" style="margin-left: 23.5%;"></div>
            </div>
        </t>
    </t>

    <t t-name="WkWalletRechargePopup">
		<div class="modal-dialog">
			<div class="wk_wallet_recharge" style="padding:10px;overflow:hidden">
                <div class="title">
                    <i class="fa fa-times cancel_recharge" style="font-size:25px;float:right;margin-top:-5px;cursor:pointer" aria-hidden="true"></i>
                </div>
                <div style="overflow:hideen">
                    <div class="wallet_image">                
                        <img style="pointer-events: none;" src="/pos_wallet_management/static/description/wallet.png" width="70px" height="70px" />
                        <h3 style="font-size:18px">Wallet Recharge</h3>
                        <p style="font-size:14px">Your Wallet Balance is
                            <b><t t-if="widget.options.partner">
                                <t t-esc="widget.format_currency(widget.options.partner.wallet_credits)"/>
                            </t></b>
                        </p>
                    </div>
                    <div class="body">
                        <div style="float:left;text-align: left;padding-left:10%">
                            <p>Amount</p>
                            <input class="rechage_amount" type="number"/>
                            <p style="margin-top:11px">Remarks</p>
                            <textarea class="recharge_reason" rows="2" cols="30" style="resize:none;margin-top:-7px;width:100%;font-size:16px"  type="text" >Wallet Recharge</textarea>
                        </div>
                        <div >
                            <button class="button validate_recharge" >Add Money</button>
                        </div>
                    </div>
                </div>
			</div>
		</div>
	</t>

    <t t-name="MainWalletRechargePopup">
		<div class="modal-dialog">
			<div class="wk_wallet_recharge" style="padding:10px;overflow:hidden;">
                <div class="title">
                    <i class="fa fa-times cancel_recharge" style="font-size:25px;float:right;margin-top:-5px;cursor:pointer" aria-hidden="true"></i>
                </div>
                <div class="wallet_image">                
                    <img style="pointer-events: none;" src="/pos_wallet_management/static/description/wallet.png" width="70px" height="70px" />
                    <h3 style="font-size:18px">Wallet Recharge</h3>
                </div>
                <div style="height:156px">
                    <table>
                        <tr>
                            <td>
                                 <h3 style="font-size:16px;margin-left:15px">Wallet Id</h3>
                            </td>
                            <td>
                                <input class="wallet_input"/>
                                <div class='wallet-holder'>  
                                    <ul>
                                        <li>
                                        <span class='wallet-name'></span>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    </table>
                    <div class="wallet_details" style="display:none">
                        <table>
                            <tr>
                                <td>
                                    <h3 style="font-size:16px;margin-left:11px">Customer Name</h3>
                                </td>
                                <td>
                                    <h3 class="wallet_customer" style="font-size:16px;padding-left:10px"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h3  style="font-size:16px;margin-left:11px">Available Credits</h3>
                                </td>
                                <td>
                                    <h3 class="available_balance" style="font-size:16px;padding-left:10px"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div>
                    <button class="button validate_wallet" >Proceed</button>
                </div>
			</div>
		</div>
	</t>

    <t t-name="WalletRechargeWidget">
        <span style="padding:11px;cursor:pointer">
            <img src="/pos_wallet_management/static/description/recharge_button.png" width="25px" height="25px" />
        </span>
    </t>
    
    <t t-name="WkErrorNotifyPopopWidget">
		<div class="modal-dialog">
			<div class="wk-alert move" id="box">
				<center>
					<div class="wk_mark">
					</div>
					<h2><t t-esc="widget.options.title ||'Error !!!'"/></h2>
					<p><t t-esc="widget.options.body ||''"/></p>
					<div>
						<button class="button cancel" style="margin-top:0px">Ok</button>
					</div>
				</center>
			</div>
        </div>
	</t>

    <t t-name="CreateWalletPopopWidget">
		<div class="modal-dialog">
			<div class="wk-alert">
                 <div class="title">
                    <i class="fa fa-times cancel_recharge" style="font-size:25px;float:right;margin-right:-12px;margin-top:-15px;cursor:pointer" aria-hidden="true"></i>
                </div>
                <div class="wallet_status" style="height:80px;width:80px;margin-top:15px">
					<div class="show_tick draw"></div>
				</div>
				<center>
					<div class="wk_confirm_mark" style="border:3px solid #f8bb86">
                        <div class="wk_warning">\n   
                            <span class="mark_line"></span>\n    
                            <span class="mark_dot"></span>\n 
                        </div>
					</div>
					<h2><t t-esc="widget.options.title ||'Error !!!'"/></h2>
					<p><t t-esc="widget.options.body ||''"/></p>
					<div>
                        <button class="button create_wallet" style="margin-top:0px">Create &amp; Recharge</button>
					</div>
				</center>
			</div>
        </div>
	</t>

</templates>