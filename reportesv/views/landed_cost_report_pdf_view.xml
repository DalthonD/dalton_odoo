<odoo>
  <data>
    <template id ='company_strategiksv_landed_cost_report_pdf'>
      <t t-call="web.html_container">
        <t t-call="web.basic_layout">
          <div class="page" style="font-size: 8pt">
            <style type="text/css">
              .spacing-line{
                line-height: 5pt
              }
              .center-middle-title{
                font-size: 15px;
                text-transform: uppercase;
                line-height: 10pt;
              }
              .center-middle{
                text-align: center;
                vertical-align: middle !important;
                padding:0.5px !important;
                width:100%;
              }
              .center-middle-o{
                text-align: center;
                vertical-align: middle !important;
                white-space: nowrap !important;
              }
              .tr-color{
                background-color:blue;
                width:100%;
              }
              .table-content{
                text-align: right;
                vertical-align: middle;
                height: auto;
                width: 100%;
                padding: 0px;
                border-collapse: collapse;
              }
              table{
                width:100%;
              }
              table td{
                padding:0.5px;
                white-space: nowrap;
              }
              table td:last-child{
                padding: 0.5px;
                width:100%;
              }
              .pagenumber:before {
                position: relative;
                border-width: 55%;
                bottom: 1;
                width: 100%;
                font-size: 7pt;
                background-color:gray;
                content: "Pág. " conunter(page) " de " counter(pages);
              }
            </style>
            <!--Declaracion de variables-->
            <t t-set="company_id" t-value="int(0)"/>
            <t t-set="contador" t-value="null"/>
            <t t-set="company" t-value="null"/>

            <t t-set="compra" t-value="float(0.00)"/>
            <t t-set="zero" t-value="float(0.00)"/>
            <t t-set="totalExentas" t-value="float(0.00)"/>
            <t t-set="totalGravadas" t-value="float(0.00)"/>
            <t t-set="totalIva" t-value="float(0.00)"/>
            <t t-set="totalRetenido" t-value="float(0.00)"/>
            <t t-set="totalPercibido" t-value="float(0.00)"/>
            <t t-set="totalCompras" t-value="float(0.00)"/>
            <t t-set="totalExcluidos" t-value="float(0.00)"/>
            <t t-set="totalRetenido3" t-value="float(0.00)"/>
            <t t-set="importacion" t-value="false"/>
            <t t-set="intEx" t-value="float(0.00)"/>
            <t t-set="impEx" t-value="float(0.00)"/>
            <t t-set="intGra" t-value="float(0.00)"/>
            <t t-set="impGra" t-value="float(0.00)"/>
            <!--Fin de declaraciones-->

            <!--Encabezado-->
              <t t-foreach="docs" t-as="o">
                <t t-set="company_id" t-value="int(data.get('form').get('company_id')[0])"/>
                <div class="col-3 mb4" style="text-align:left">
                  <img t-if="o.company_id.logo" t-attf-src="data:image/*;base64,{{o.company_id.logo}}" t-field-options='{"widget": "image"}' style="max-height: 45px;"/>
                </div>
                <div style="text-align:right">
                  <b><span style="font-size:20pt,color:blue;">RETACEO</span></b>
                </div>

                <div t-if="report_type == 'pdf'" class="text-muted">
                    Pág.: <span class="page"/> de <span class="topage"/>
                </div>
              </t>
          </div>
        </t>
      </t>
    </template>
  </data>
</odoo>
