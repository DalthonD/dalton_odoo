<odoo>
  <data>
    <template id ='company_strategiksv_taxpayer_report_pdf'>
      <t t-call="web.html_container">
        <t t-call="web.basic_layout">
          <div class="page">
            <link rel="stylesheet" href="/reportesv/static/src/css/report.css"/>
            <style type="text/css">
              th {
                text-align: center;
                vertical-align: middle;
                border-collapse: collapse;
                padding: 0px;
                border-spacing: 0px;
              }
              td {
                text-align: center;
                border-collapse: collapse;
                padding: 0px;
                border-spacing: 0px;
              }
              .pagenumber:before {
                content: counter(page);
              }
              .pagecount:before {
                content: counter(pages);
              }
              @page {
                @bottom-left{
                  content: "Pag. " counter(page) " de " counter(pages);
                }
                size: A4;
                margin: 1mm 1mm 1mm 1mm;
              }
              @media print {
                .page {
                  page-break-before: always;
                }

                footer {
                  position: fixed;
                  bottom: 0;
                }

                html {
                  width: 216mm;
                  height: 279mm;
                }
              }
            </style>
            <!--Declaracion de variables-->
            <t t-set="month" t-value="int(0)"/>
            <t t-set="year" t-value="int(0)"/>
            <t t-set="company_id" t-value="int(0)"/>
            <t t-set="contador" t-value="null"/>
            <t t-set="company" t-value="null"/>
            <t t-set="importacion" t-value="False"/>

            <t t-set="total" t-value="float(0.00)"/>
            <t t-set="venta" t-value="float(0.00)"/>
            <t t-set="zero" t-value="float(0.00)"/>
            <t t-set="totalExentas" t-value="float(0.00)"/>
            <t t-set="totalGravadas" t-value="float(0.00)"/>
            <t t-set="totalIva" t-value="float(0.00)"/>
            <t t-set="ventas" t-value="float(0.00)"/>
            <t t-set="totalRetenido" t-value="float(0.00)"/>
            <t t-set="totalPercibido" t-value="float(0.00)"/>
            <t t-set="totalventas" t-value="float(0.00)"/>
            <!--Fin de declaraciones-->

            <!--Encabezado-->
              <t t-foreach="docs" t-as="o">
                <t t-set="month" t-value="int(data.get('form').get('date_month'))"/>
                <t t-set="year" t-value="int(data.get('form').get('date_year'))"/>
                <t t-set="company_id" t-value="int(data.get('form').get('company_id')[0])"/>
                <t t-set="contador" t-value="o.sv_aprueba_partida"/>
                <t t-set="company" t-value="o"/>
                <div style="text-align: center; background-color: ligthgray">
                  <h2 style="font-size: 40px; text-transform: uppercase"><span t-field="o.name"/></h2>
                  <h2>LIBRO DE VENTAS A CONTRIBUYENTES</h2>
                  <h2>NIT: <span t-field="o.sv_nit"/> NRC: <span t-field="o.sv_nrc"/></h2>
                  <h2><span t-esc="o.get_month_str(month)"/> <span t-esc="year"/></h2>
                </div>
                <hr style="width: 100%; color: #FFFFFF; border-width: 3px"/>
              </t>
            <!--Fin encabezado-->
            <!--Contenido de reporte-->
            <!--t t-foreach="company.get_taxpayer_details(company_id, year, month)" t-as="c"-->
              <table class="table table-bordered" style="border: 1px solid black; text-align: center; vertical-align: middle; height: auto; width: 100%; padding: 0px; border-spacing: 0px; border-collapse: collapse;">
                  <tr style="width: 100%;text-align: center; vertical-align: middle;">
                    <th rowspan="2">#</th>
                    <th rowspan="2">FECHA</th>
                    <th rowspan="2" style="width: 40%; font-size: 10px">No. Corr. Por Tipo De Documento</th>
                    <th rowspan="2">CLIENTE</th>
                    <th rowspan="2">N.R.C.</th>
                    <th colspan="4">VENTAS PROPIAS</th>
                    <th rowspan="2">RETENCION</th>
                    <th rowspan="2">PERCEPCION</th>
                    <th rowspan="2">TOTAL</th>
                  </tr>
                  <tr>
                    <th>EXENTAS</th>
                    <th>GRAVADAS</th>
                    <th>DEBITO</th>
                    <th>T. VENTA</th>
                  </tr>
                <tr t-foreach="company.get_taxpayer_details(company_id, year, month)" t-as="c" style="text-align: left; vertical-align: middle; height: auto; width: 100%; padding: 0px; border-collapse: collapse;">
                  <td><span t-esc="int(c_index) + 1"/></td>
                  <td><span t-esc="c.get('fecha')"/></td>
                  <td><span t-esc="c.get('factura')"/></td>
                  <td><span t-esc="c.get('cliente')"/></td>
                  <td><span t-esc="c.get('nrc')"/></td>
                  <td><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(c.get('exento'))"/></td>
                  <td><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(c.get('gravado'))"/></td>
                  <td><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(c.get('iva'))"/></td>
                  <t t-set="venta" t-value="venta + c.get('exento') + c.get('gravado') + c.get('iva')"/>
                  <td><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(venta)"/></td>
                  <td><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(c.get('retenido'))"/></td>
                  <td><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(c.get('percibido'))"/></td>
                  <t t-set="total" t-value="total + venta + c.get('percibido') + c.get('retenido')"/>
                  <td><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(total)"/></td>
                  <!--Calculo de totales-->
                  <t t-set="totalExentas" t-value="totalExentas + c.get('exento')"/>
                  <t t-set="totalGravadas" t-value="totalGravadas + c.get('gravado')"/>
                  <t t-set="totalIva" t-value="totalIva + c.get('iva')"/>
                  <t t-set="ventas" t-value="ventas + venta"/>
                  <t t-set="totalRetenido" t-value="totalRetenido + c.get('retenido')"/>
                  <t t-set="totalPercibido" t-value="totalPercibido + c.get('percibido')"/>
                  <t t-set="totalventas" t-value="totalventas + total"/>
                  <!--Fin ce calculos-->
                </tr>
                <tr align="right">
                  <td>
                  </td>
                  <td>
                  </td>
                  <td>
                  </td>
                  <td>
                  </td>
                  <td>
                  </td>
                  <td><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(totalExentas)"/></td>
                  <td><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(totalGravadas)"/></td>
                  <td><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(totalIva)"/></td>
                  <td><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(ventas)"/></td>
                  <td><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(totalRetenido)"/></td>
                  <td><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(totalPercibido)"/></td>
                  <td><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(totalventas)"/></td>
                </tr>
              </table>
            <!--/t-->
              <table align="center">
                <tr style="width: 100%;">
                  <td align="left">
                    <table class="table table-bordered" style="border: 1.5px solid black; border-collapse: collapse;">
                      <tr style="width: 100%;">
                        <th align="center">Resumen de Operaciones</th>
                        <th align="center">Valor Exenta</th>
                        <th align="center">Gravado</th>
                        <th align="center">Débito Fiscal</th>
                        <th align="center">Retención</th>
                        <th align="center">Percepción</th>
                        <th align="center">Total</th>
                      </tr>
                      <tr>
                        <td align="center">Totales</td>
                        <td align="center"><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(totalExentas)"/></td>
                        <td align="center"><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(totalGravadas)"/></td>
                        <td align="center"><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(totalIva)"/></td>
                        <td align="center"><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(totalRetenido)"/></td>
                        <td align="center"><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(totalPercibido)"/></td>
                        <td align="center"><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(totalventas)"/></td>
                      </tr>
                    </table>
                  </td>
                  <td style="width: 10%"></td>
                  <td style="text-align: right; vertical-align: bottom">
                    <div style="text-align: center;">
                        <p align="center">_________________________________________</p>
                        <p align="center" style="vertical-align: top"><span t-esc="contador"/></p>
                        <p align="center" style="vertical-align: top">Contador</p>
                    </div>
                  </td>
                </tr>
              </table>
                <!--Fin contenido-->
              <!--Pie de pagina-->
              <div class="footer" style="background-color: lightgray; bottom: 0; position: fixed; width: 100%; border-width: 55%;">
                <div class="row">
                    <p style="text-align: right">Pag. <span class="pagenumber"></span>
                    de
                    <span class="pagecount"></span></p>
                </div>
              </div>
              <!-- Fin Pie de pagina-->
          </div>
        </t>
      </t>
    </template>
  </data>
</odoo>
