<odoo>
  <data>
    <template id ='account_invoice_formato_cryo'>
      <t t-call="web.html_container">
        <t t-call="web.basic_layout">
          <t t-foreach="docs" t-as="doc">
            <t t-set="fp_sv_clase" t-value="doc.fiscal_position_id.sv_clase if doc.fiscal_position_id else 'Gravado'"/>
            <div class="page" style="position:absolute;top:64px;left:20px;width:530px;height:130px;">
              <div style="position:absolute;top:130px;left:0px;width:530px;">
                <table class="table o_report_block_table small table-borderless" style="border-bottom:none;width:400px;margin-top:5px;margin-left:-14px;">
                  <thead class="small">
                    <tr>
                      <th>
                        <span>
                          <font style="font-size: 8px;">
                            <font style="font-size: 12px;">
                              <font style="font-size: 8px;"/></font>
                            </font>
                          </span>
                        </th>
                        <th>
                          <span>
                            <font style="font-size: 8px;"/>
                          </span>
                        </th>
                        <th>
                          <span>
                            <font style="font-size: 8px;"/>
                          </span>
                        </th>
                        <th style="margin-top:10px;margin-bottom:10px;width:68px;">
                          <span>
                            <font style="font-size: 8px;"/>
                          </span>
                        </th>
                        <th>
                          <span>
                            <font style="font-size: 8px;"/>
                          </span>
                        </th>
                        <th>
                          <span>
                            <font style="font-size: 8px;"/>
                          </span>
                        </th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr t-foreach="doc.invoice_line_ids" t-as="table_line">
                        <td>
                          <span t-esc="'{0:.2f}'.format(table_line.quantity)" style="position:absolute; left:1px;"/>
                        </td>
                        <td style="width:300px">
                          <span t-field="table_line.display_name" t-options-widget="&quot;&quot;" style="display:inline-block;width:245px; position:absolute; left:55px;"/>
                        </td>
                        <td>
                          <span t-esc="doc.currency_id.symbol" style="position:absolute; left:306px;"/><span t-esc="'{0:.2f}'.format(table_line.price_unit) if fp_sv_clase =='Gravado' else ''" style="position:absolute; left:310px;"/>
                          <span t-esc="'{0:.2f}'.format(table_line.price_unit+table_line.price_tax) if fp_sv_clase =='Exento' else ''" style="position:absolute; left:310px;"/>
                        </td>
                        <td>
                          <span t-esc="doc.currency_id.symbol" style="position:absolute; left:469px;"/><span t-esc="table_line.price_total if fp_sv_clase == 'Gravado' else ''" style="position:absolute; left:473px;"/>
                        </td>
                        <td>
                          <span t-esc="doc.currency_id.symbol" style="position:absolute; left:456px;"/><span t-esc="table_line.price_subtotal if fp_sv_clase == 'Exento' else ''" style="position:absolute; left:460px;"/>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
                <div style="position:absolute;top:630px;left:0px;width:530px;height:110px;"/>
                <span t-field="doc.date_invoice" class="small" style="position:absolute;top:10px;left:400px;width:70px;color:black;"/>
                <span t-field="doc.partner_id.name" class="small" style="position:absolute;top:35px;left:80px;width:250px;color:black;"/>
                <span t-field="doc.partner_id.street" class="small" style="position:absolute;top:58px;left:97px;width:120px;color:black;"/>
                <span t-field="doc.partner_id.city" class="small" style="position:absolute;top:90px;left:385px;width:120px;color:black;"/>
                <span t-field="doc.partner_id.x_nit" class="small" style="position:absolute;top:115px;left:72px;width:120px;color:black;"/>
                <span t-field="docs.payment_term_id.name" class="small" style="position:absolute;top:115px;left:287px;width:120px;color:black;"/>
                <span t-field="doc.x_letras" class="small" style="position:absolute;top:657px;left:30px;width:60%;color:black;"/>
                <span t-esc="doc.currency_id.symbol" style="position:absolute;top:650px;left:471px;width:65px;color:black;"/><span t-esc="doc.amount_total if fp_sv_clase == 'Gravado' else ''" class="small" style="position:absolute;top:650px;left:475px;width:65px;color:black;"/>
                <span t-esc="doc.currency_id.symbol" style="position:absolute;top:650px;left:451px;width:65px;color:black;"/><span t-esc="doc.amount_untaxed if fp_sv_clase == 'Exento' else ''" class="small" style="position:absolute;top:650px;left:455px;width:65px;color:black;"/>
                <span class="small" style="position:absolute;top:675px;left:475px;width:50px;color:black;">0</span>
                <span t-esc="doc.currency_id.symbol" style="position:absolute;top:700px;left:456px;width:50px;color:black; display:none"/><span t-esc="doc.amount_total if fp_sv_clase == 'Gravado' else ''" class="small" style="position:absolute;top:700px;left:460px;width:50px;color:black; display:none"/>
                <span t-esc="doc.currency_id.symbol" style="position:absolute;top:700px;left:471px;width:50px;color:black;"/><span t-esc="doc.amount_untaxed if fp_sv_clase == 'Exento' else 0" class="small" style="position:absolute;top:700px;left:475px;width:50px;color:black;"/>
                <span t-esc="doc.currency_id.symbol" style="position:absolute;top:730px;left:471px;width:65px;color:black;"/><span t-esc="doc.amount_untaxed if fp_sv_clase == 'Exento' else ''" class="small" style="position:absolute;top:730px;left:475px;width:65px;color:black;"/>
              </div>
            </t>
          </t>
        </t>
    </template>
  </data>
</odoo>
